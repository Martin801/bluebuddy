<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/card_noti">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/evcard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="15">

                        <ImageView
                            android:id="@+id/userpic"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="fitXY"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnProfileImageBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1">

                        <com.bluebuddy.classes.MyTextView
                            android:id="@+id/txtevttitleid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.bluebuddy.classes.MyTextView
                        android:id="@+id/txtevtlocid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp" />

                  <!--  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <com.bluebuddy.classes.MyTextView
                                android:id="@+id/txtevtdatefromid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:layout_marginTop="3dp"
                                android:text=""
                                android:textSize="14sp" />
                            <!--<TextView
                                android:id="@+id/txtparticipated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Participated "
                                android:layout_marginLeft="15dp"
                                android:textSize="14sp"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/txtdeclined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Participated "
                                android:layout_marginLeft="15dp"
                                android:textSize="14sp"
                                android:visibility="gone"/>-->
                        </LinearLayout>


                  <!--  </LinearLayout>-->


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idacpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_corner1"
                    android:onClick="Vdetails"
                    android:text="Accept"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <!--   <ImageView
                       android:id="@+id/idacpted"
                       android:layout_width="20dp"
                       android:layout_height="10dp"
                       android:src="@drawable/ic_checkmark"
                       android:layout_marginRight="20dp"
                       android:visibility="gone"
                       />-->
                <ImageView
                    android:id="@+id/iddeclined"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_rounded_block_sign"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idrjt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_corner1"
                    android:text="Ignore"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>


