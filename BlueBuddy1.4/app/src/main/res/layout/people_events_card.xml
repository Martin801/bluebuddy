<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view2"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="8dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="10dp"
    android:layout_marginBottom="8dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >
<!--
    card_view:cardBackgroundColor="#81C784" -->



    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/evcard2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="40">

                    <TextView
                        android:id="@+id/txtevttitleid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Scuba Diving"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/date"
                        android:layout_weight="30"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="70">

                        <TextView
                            android:id="@+id/txtevtdatefromid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="33"
                            android:text="21-March-2017"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="-"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/txtevtdattid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:text="18 July 2017"
                            android:layout_weight="33"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:layout_margin="5dp"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:background="@drawable/location"
                        android:layout_weight="30"/>

                    <TextView
                        android:id="@+id/txtevtlocid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="70"
                        android:textSize="15sp"
                        android:text="Londan Docklands"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:weightSum="100">
                <ImageView
                    android:id="@+id/txtupicid"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="70"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/txtunameid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="Steve Jobes"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="125dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:background="#000000"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp">

        <TextView
            android:id="@+id/txtevtdescid"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Active music and movement session for toddlers and carers."/>
    </LinearLayout>

</android.support.v7.widget.CardView>
