        android:textSize="16sp"
      />
    <!-- android:onClick="cp6nxt"-->
    <Button
        android:id="@+id/other_loc"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_corner4"
