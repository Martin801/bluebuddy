<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cmnbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.bluebuddy.activities.BlueMarketCharterPicActivity">

    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5">

        <include layout="@layout/navlayout1" />

    </LinearLayout>

    <!-- content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="81.5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="45dp"
            android:layout_weight="35"
            android:gravity="center|bottom">

            <!--                android:id="@+id/idtxt1"
-->
            <com.bluebuddy.classes.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Upload your Course picture"
                android:textColor="#000000"
                android:textSize="27sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="25dp">
            <!--
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:id="@+id/imgcharpic"
                            android:onClick="Charterpic"
                            android:clickable="true"
                            android:src="@mipmap/ic_launcher"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"/>
                        -->


            <ImageView
                android:id="@+id/imgcharpic"
                android:layout_width="@dimen/_93sdp"
                android:layout_height="@dimen/_93sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/upldimg"
                android:clickable="true"
                android:onClick="Charterpic"
                android:scaleType="fitXY" />


        </LinearLayout>

    </LinearLayout>

    <!-- footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/charterpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner1"
            android:onClick="upldimg"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>
