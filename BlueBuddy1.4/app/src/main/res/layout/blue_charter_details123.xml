                                android:layout_marginLeft="55dp"
                                android:layout_marginRight="55dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/round_corner1"
                                android:gravity="center"
                                android:text="rate and write a review"
                                android:textAllCaps="true"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:id="@+id/linearReviewProduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <com.bluebuddy.classes.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:gravity="center"
                                    android:text="Rate"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textColor="#FF454545" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:numStars="5"
                                    android:rating="0.0"
                                    android:stepSize="1" />


                                <com.bluebuddy.classes.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Review"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textColor="#FF454545" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left">

                                    <EditText
                                        android:id="@+id/rating_title"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="15dp"
                                        android:background="@drawable/border"
                                        android:gravity="left|top"
                                        android:hint="Title"
                                        android:inputType="textCapSentences"
                                        android:maxLength="50"
                                        android:maxLines="1"
                                        android:padding="5dp" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/border"
                                    android:gravity="left|top"
                                    android:hint="Description"
                                    android:inputType="textCapSentences|textMultiLine"
                                    android:lines="10"
                                    android:maxLength="250"
                                    android:maxLines="10"
                                    android:padding="5dp" />

                                <Button
                                    android:id="@+id/rate_and_rvw"
                                    android:layout_width="110dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/round_corner1"
                                    android:gravity="center"
                                    android:text="SUBMIT"
                                    android:textColor="#ffffff"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/rvcardReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnShowHideReview"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="55dp"
                                android:layout_marginRight="55dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/round_corner1"
                                android:gravity="center"
                                android:text="@string/view_all_reviews"
                                android:textAllCaps="true"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:id="@+id/ll_reviewList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_no_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_15sdp"
                                    android:text="No Review Found"
                                    android:textColor="#000"
                                    android:textSize="@dimen/_11sdp"
                                    android:visibility="gone" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/reviewRecycler"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                </LinearLayout>
                //today


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_footer" />
    </LinearLayout>


