<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="left"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.bluebuddy.activities.BoatCharterAdvFormActivity">

    <include layout="@layout/navbar_blue"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92"
        android:background="@drawable/cmnbg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="1dp"
                android:layout_weight="84"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">
                    <!--                        android:id="@+id/idtxt1"
                    -->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:textColor="#000000"
                        android:textSize="26sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />

                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Please fill up product details"
                        android:textSize="15sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="vertical">

                    <!--                        android:id="@+id/idtxt2"
-->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Product"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/bmpname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Product Name"
                        android:inputType="text"
                        android:lines="1"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="vertical">

                    <!--                        android:id="@+id/idtxt3"
-->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spacttype4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:prompt="@string/Activity_prompt"
                        android:spinnerMode="dropdown"
                        android:textSize="15sp">

                    </Spinner>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/newlvl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <EditText
                        android:id="@+id/certlvlid1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="9"
                        android:background="@android:color/transparent"
                        android:hint="Enter Category name"
                        android:inputType="textCapSentences"
                        android:lines="1"
                        android:maxLength="20"
                        android:textSize="14.8sp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_substract" />

                        <Button
                            android:id="@+id/minus_level1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:id="@+id/certlvlid1_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dp"
                    android:background="#757575"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="vertical">
                    <!--                        android:id="@+id/idtxt5"
                    -->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Description"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/bmpdesc"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border"
                        android:gravity="start"
                        android:hint="Enter Product Description"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="18"
                        android:maxLength="250"
                        android:overScrollMode="always"
                        android:padding="10dp"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textSize="15sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Max 250 Character" />

                        <View
                            android:layout_width="125dp"
                            android:layout_height="1px"
                            android:layout_marginTop="16dp"
                            android:background="#757575" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="vertical">

                    <!--                        android:id="@+id/idtxt57"
-->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="Enter your location"
                        android:lines="1"
                        android:textSize="15sp">

                    </AutoCompleteTextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />
                    <!--
                    <EditText
                        android:id="@+id/chrtloc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter your location"
                        android:inputType="text"
                        android:lines="1"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />-->

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="vertical">

                    <!--                        android:id="@+id/idtxt6"
-->
                    <com.bluebuddy.classes.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.bluebuddy.classes.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="$"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/bmpprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter Price"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:background="#757575" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <CheckBox
                        android:id="@+id/cb_hideContactDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hide_contact_information" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btbcadvf"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner1"
                        android:onClick="boatcadv"
                        android:text="NEXT"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_footer" />

</LinearLayout>