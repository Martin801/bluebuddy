<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:background="#022042"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgNotification2"
                    style="@style/menu_img"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/bckarw" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_horizontal|center_vertical">

            <com.bluebuddy.classes.MyTextView
                android:id="@+id/navtxt"
                style="@style/text_size_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_horizontal|center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/imgNotification"
                    style="@style/menu_img"
                    android:src="@drawable/bell" />

                <com.bluebuddy.classes.MyTextView
                    android:id="@+id/bell_counter"
                    style="@style/text_size_14"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="-6dp"
                    android:background="@drawable/badge"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</merge>