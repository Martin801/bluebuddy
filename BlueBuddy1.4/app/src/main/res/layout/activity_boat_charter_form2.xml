                    android:id="@+id/chrtbtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter type of boat"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="25"
                    android:textSize="15sp" />

                <!--
                                <Spinner
                                    android:id="@+id/spacttype5"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:prompt="@string/Activity_prompt"
                                    android:spinnerMode="dialog"
                                    android:textSize="15sp">

                                </Spinner>
                -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:background="#757575" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="left|center_horizontal"
                android:orientation="vertical">

                <com.bluebuddy.classes.MyTextView
                    android:id="@+id/idtxt24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/chrtbcap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter capacity"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="15sp" />
                <!--<Spinner
                    android:id="@+id/spacttype6"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/Activity_prompt"
                    android:spinnerMode="dialog"
                    android:textSize="15sp">

                </Spinner>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:background="#757575" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="10">

                <CheckBox
                    android:id="@+id/cb_hideContactDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hide_contact_information" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="15"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chrtbtn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner1"
                    android:onClick="btnboatcharter"
                    android:text="UPDATE"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/chrtbtndlt"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner1"
                    android:text="DELETE"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />


                <!-- <Button
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:textSize="17sp"
                     android:onClick="cp6skp"
                     android:id="@+id/btncp6skp"
                     android:layout_height="45dp"
                     android:background="@drawable/round_corner1"
                     android:layout_marginLeft="15dp"
                     android:text="@string/btn_cpnxt"
                     android:textColor="#FFFFFF"/>-->
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
