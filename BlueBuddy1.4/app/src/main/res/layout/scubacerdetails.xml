<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluebuddy.activities.CreateProfileActivityscubadiving"
    android:gravity="left"
    android:background="@drawable/cmnbg"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <include layout="@layout/navlayout1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="93"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_20sdp" />
                <!--<TextView
                    android:id="@+id/txtv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Diving "
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_20sdp" />-->
                <TextView
                    android:id="@+id/txtv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certification"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_20sdp" />
                <!--                android:text="@string/txt_t25"
                -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="left|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idtxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agency Name"
                    style="@style/scuba_part_ext" />

                <EditText
                    android:id="@+id/certnameid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/scuba_part_editext"
                    android:background="@android:color/transparent"
                    android:inputType="textCapSentences"
                    android:lines="1"
                    android:editable="false"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    style="@style/scuba_part_view"
                     />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="left|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idtxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certification Level"
                    style="@style/scuba_part_ext" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/certlvlid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/scuba_part_editext"
                        android:background="@android:color/transparent"
                        android:lines="1"
                        android:editable="false"
                        android:maxLength="20"
                        android:inputType="textCapSentences"

                       />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    style="@style/scuba_part_view" />

                <LinearLayout
                    android:id="@+id/crtdt22"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/certlvlid22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:lines="1"
                        android:editable="false"
                        android:maxLength="20"
                        android:inputType="textCapSentences"
                        android:textSize="14.8sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="6dp"
                        android:background="#757575"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/crtdt33"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/certlvlid33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:lines="1"
                        android:editable="false"
                        android:maxLength="20"
                        android:inputType="textCapSentences"
                        android:textSize="14.8sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="6dp"
                        android:background="#757575"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/newlvl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:visibility="gone"
                    >
                    <EditText
                        android:id="@+id/certlvlid1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/txt_55"
                        android:lines="1"
                        android:maxLength="20"
                        android:inputType="textCapSentences"
                        android:textSize="14.8sp"
                        android:layout_weight="9"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/certlvlid1_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dp"
                    android:background="#757575"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/newlvl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:visibility="gone"
                    >
                    <EditText
                        android:id="@+id/certlvlid2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/txt_55"
                        android:lines="1"
                        android:maxLength="20"
                        android:inputType="textCapSentences"
                        android:textSize="14.8sp"
                        android:layout_weight="9"
                        />
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_substract"
                            android:layout_weight="1"
                            />
                        <Button
                            android:id="@+id/minus_level2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:id="@+id/certlvlid2_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    style="@style/scuba_part_view"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="left|center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75">
                        <TextView
                            android:id="@+id/idtxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certification Number"
                            style="@style/scuba_part_ext" />
                    </LinearLayout>


                </LinearLayout>


                <EditText
                    android:id="@+id/certnumid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/scuba_part_editext"
                    android:background="@android:color/transparent"
                    android:editable="false"
                    android:inputType="textCapSentences"
                    android:maxLength="15"
                    android:lines="1"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    style="@style/scuba_part_view" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_weight="15"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/certdnxtid"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginRight="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/round_corner1"
                    android:text="Close"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>