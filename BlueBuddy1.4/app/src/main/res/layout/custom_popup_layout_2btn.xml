<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner3pp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Your Review will be added soon."
            android:textColor="#757575"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#757575" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="48.5"
            android:background="@drawable/round_corner2"
            android:textAllCaps="false"
            android:text="Continue1"
            android:textColor="#083678"
            android:textSize="20sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#757575"
               />


            <Button
            android:id="@+id/btnContinue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="48.5"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_corner2"
            android:text="Continue2"
            android:textColor="#083678"
            android:textSize="20sp" />
</LinearLayout>
    </LinearLayout>
</LinearLayout>