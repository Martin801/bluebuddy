<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cmnbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.bluebuddy.activities.CreateProfileActivity7">

    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5">

        <include layout="@layout/navlayout1" />

    </LinearLayout>

    <!-- content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="82.5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="45dp"
            android:layout_weight="35"
            android:gravity="center|bottom">

            <TextView
                android:id="@+id/idtxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Upload your profile picture"
                android:textColor="#000000"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:weightSum="1">


            <!--  <ImageView
                  android:id="@+id/imgfrst"
                  android:layout_width="95dp"
                  android:layout_height="95dp"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:onClick="frstpic"
                  android:scaleType="fitCenter"
                  android:src="@drawable/upldimg" />-->


            <!--
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imgfrst"
                android:onClick="frstpic"
                android:clickable="true"
                android:src="@drawable/image_upload1"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
-->


            <ImageView
                android:id="@+id/imgscnd"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/upldimg"
                android:clickable="true"
                android:onClick="scndpic"
                android:scaleType="fitXY" />


            <!--<ImageView
                android:id="@+id/imgthrd"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="thrdpic"
                android:scaleType="fitCenter"
                android:src="@drawable/upldimg" />-->


        </LinearLayout>

    </LinearLayout>

    <!-- footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="15">

        <Button
            android:id="@+id/crtpropicid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner1"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
