<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_bm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_3sdp"
    card_view:contentPadding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100">


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:innerRadius="0dp"
                android:outlineProvider="none"
                android:shape="rectangle"
                card_view:cardBackgroundColor="@color/transparent"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_weight="35"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="rectangle"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/bmspic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rect_img"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="65"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.bluebuddy.classes.MyTextView
                            android:id="@+id/bmsname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FF313131"
                            android:textSize="@dimen/_16sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.bluebuddy.classes.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Offered : "
                                android:textSize="@dimen/_14sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.bluebuddy.classes.MyTextView
                                android:id="@+id/service_offred"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <!--Linear Layout contact-->
                        <LinearLayout
                            android:id="@+id/ll_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/call" />

                            <com.bluebuddy.classes.MyTextView
                                android:id="@+id/contact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text=""
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <!--Linear Layout mail-->
                        <LinearLayout
                            android:id="@+id/ll_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"

                                android:src="@drawable/mail" />

                            <com.bluebuddy.classes.MyTextView
                                android:id="@+id/mail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text=""
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.bluebuddy.classes.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Rating : "
                                    android:textColor="#FF313131"
                                    android:textSize="@dimen/_12sdp" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:numStars="5"
                                    android:paddingTop="5dp"
                                    android:progressTint="#FF0A3779"
                                    android:rating="0.0"
                                    android:stepSize="1"
                                    android:theme="@style/RatingBar" />
                            </LinearLayout>

                            <!--
                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="40dp">

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:orientation="horizontal">

                                                                <Button
                                                                    android:id="@+id/bmsmsg"
                                                                    android:layout_width="0dp"
                                                                    android:layout_height="35dp"
                                                                    android:layout_weight="5"
                                                                    android:background="@drawable/round_corner1"
                                                                    android:text="Chat"
                                                                    android:textColor="#ffffff"
                                                                    android:textSize="12sp" />

                                                                <Button
                                                                    android:id="@+id/bmsdet"
                                                                    android:layout_width="0dp"
                                                                    android:layout_height="35dp"
                                                                    android:layout_marginLeft="10dp"
                                                                    android:layout_weight="5"
                                                                    android:background="@drawable/round_corner1"
                                                                    android:text="details"
                                                                    android:textColor="#ffffff"
                                                                    android:textSize="12sp" />
                                                            </LinearLayout>
                                                        </LinearLayout>
                            -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:weightSum="10">

                                <LinearLayout
                                    android:id="@+id/linearCourseChat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4.75"
                                    android:visibility="gone">

                                    <Button
                                        android:id="@+id/bmsmsg"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_28sdp"
                                        android:background="@drawable/round_corner1"
                                        android:text="Chat"
                                        android:textColor="#ffffff"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearCourseEdit"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4.75"
                                    android:visibility="gone">

                                    <Button
                                        android:id="@+id/bmcedt"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_28sdp"
                                        android:background="@drawable/round_corner1"
                                        android:text="Edit"
                                        android:textColor="#ffffff"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4.75">

                                    <Button
                                        android:id="@+id/bmsdet"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_28sdp"
                                        android:background="@drawable/round_corner1"
                                        android:text="details"
                                        android:textColor="#ffffff"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="right|center">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="1dp">

                                    <ImageView
                                        android:id="@+id/flag"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/ic_flag" />

                                    <Button
                                        android:id="@+id/report_flag"
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:background="#00000000" />
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
