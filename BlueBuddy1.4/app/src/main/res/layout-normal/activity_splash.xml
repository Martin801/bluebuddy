<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/splash"
    android:layout_height="match_parent"
    tools:context="com.bluebuddy.activities.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/ivspimg"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_centerInParent="true"
                android:background="@drawable/logo1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center_horizontal|center_vertical">

            <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/progress_bar"
                custom:amount="3"
                custom:startColor="#0288D1"
                custom:endColor="#29B6FC"
                custom:layout_constraintLeft_toLeftOf="@+id/textView"
                custom:layout_constraintBottom_toBottomOf="@+id/imageView"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
